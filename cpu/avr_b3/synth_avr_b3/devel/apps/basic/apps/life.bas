10 gr : clear
100 DIM CB(5,5) : DIM NB(5,5)
105 CB(2,1)=1 : CB(2,2)=1 : CB(2,3)=1
110 FOR R=1 TO 3
120 FOR C=1 TO 3
130 TT=CB(R-1,C-1)+CB(R-1,C)+CB(R-1,C+1)+CB(R,C-1)
140 TT=TT+CB(R,C+1)+CB(R+1,C-1)+CB(R+1,C)+CB(R+1,C+1)
150 IF TT=3 OR CB(R,C)=1 AND TT=2 THEN GOTO 170
160 NB(R,C)=0 : putchar R,C,0x20 : GOTO 180
170 NB(R,C)=1 : putchar R,C,0x51
180 NEXT C
190 NEXT R
200 FOR RR=1 TO 3
210 FOR CC=1 TO 3
220 CB(RR,CC) = NB(RR,CC)
230 NEXT CC
240 NEXT RR
250 GOTO 110

